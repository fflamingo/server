{
  "name": "@fflamingo/core",
  "version": "0.0.1",
  "description":
    "fflamingo server core components, including Router, Middlewares, Request, Response",
  "main": "index.js",
  "repository": "https://github.com/fflamingo/fflamingo-server",
  "author": "Leonardo Ascione <leonardo@favoloso.team>",
  "license": "MIT",
  "scripts": {
    "test": "jest",
    "dev": "tsc -w",
    "build": "tsc -t es6 -m commonjs ./lib/"
  },
  "dependencies": {
    "@types/express": "^4.11.1",
    "express": "^4.16.3",
    "typescript": "^2.8.3"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "((\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
    "globals": {
      "ts-jest": {
        "skipBabel": true
      }
    }
  },
  "devDependencies": {
    "@types/jest": "^22.2.3",
    "jest": "^22.4.4",
    "ts-jest": "^22.4.6"
  }
}
